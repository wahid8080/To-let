<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FaceRoomOrFlat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="2">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/image1forFace"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/blank_logo" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:id="@+id/image2forFace"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"

                android:src="@drawable/blank_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLayout2forFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="2">

            <ImageView
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:id="@+id/image3forFace"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"

                android:src="@drawable/blank_logo" />

            <ImageView
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                android:id="@+id/image4forFace"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:src="@drawable/blank_logo" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="House "
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:text="Contract"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:text="Area/Thana"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Road"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:text="Category"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:text="Details"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Price"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/houseName"
                    android:text="House Name/No"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/housePhone"
                    android:text="Contract"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/areaTana"
                    android:text="Area / Thana"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/roadNo"
                    android:text="Road No / Name"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/category"
                    android:text="Category"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/houseDetails"
                    android:text="Details"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/housePrice"
                    android:text="Price"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>





        <Button
            android:id="@+id/callNow"
            android:onClick="callNow"
            android:layout_marginBottom="5dp"
            android:textSize="18dp"
            android:text="Call Now"
            android:textAllCaps="false"
            android:background="@drawable/btn_background"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:onClick="booking"
            android:id="@+id/bookNow"
            android:layout_marginBottom="20dp"
            android:textSize="18dp"
            android:text="Cancel Booking"
            android:background="@drawable/btn_background"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>