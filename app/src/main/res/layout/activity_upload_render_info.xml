<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadData.UploadRenderInfo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:elevation="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/uploadProfileImagerender"
                    android:onClick="uploadProfileImage"
                    android:src="@drawable/blank_logo"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
                <TextView
                    android:layout_marginBottom="20dp"
                    android:textSize="17dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Profile Image"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="User Name"
                    android:textColor="#555555"
                    android:textSize="16dp" />

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/clintUserNameId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#555555" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Contact"
                    android:textColor="#555555"
                    android:textSize="16dp" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/ClintPhoneNumberId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#555555" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="District"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="text"
                    android:gravity="start"
                    android:id="@+id/District"
                    android:textColor="#555555"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Area / Thana"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="text"
                    android:id="@+id/ClintAriaThanaId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#555555" />

                <TextView
                    android:textColor="#555555"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="N Id"
                    android:gravity="center_vertical"
                    android:fontFamily="serif"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:inputType="number"
                    android:id="@+id/nid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="#555555" />


                <Button
                    android:id="@+id/buttonRenterUpInfo"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:enabled="false"
                    android:onClick="dataSubmit"
                    android:text="UPLOAD"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>