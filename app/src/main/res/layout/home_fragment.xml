<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/renter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layot1"
                    android:layout_width="match_parent"
                    android:layout_height="175dp">


                    <ImageView
                        android:id="@+id/coverImage"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover_image" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ProfilePicIdForRenderId"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/empty_profile"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/userNameForRenterId2"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_below="@id/coverImage"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/ProfilePicIdForRenderId"
                        android:layout_toRightOf="@+id/ProfilePicIdForRenderId"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textSize="20dp" />


                </RelativeLayout>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layot1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="10dp"
                        android:background="#7C7C7C">

                    </View>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#FDFDFD"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/renderDistrectId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="Mohammad pur"
                                        android:textSize="18dp" />

                                    <TextView
                                        android:id="@+id/renderAreaId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="center_vertical"
                                        android:text="Nurjahan Road"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:background="#7C7C7C">

                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_phone_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/renderPhoneId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="@android:string/emptyPhoneNumber"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:background="#7C7C7C">

                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_email_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/renderEmailId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@android:string/defaultVoiceMailAlphaTag"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:background="#7C7C7C">

                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_confirmation_number_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/renderNidId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="N Id"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:background="#7C7C7C"
                                android:layout_marginBottom="20dp">
                            </View>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layot4"
                    android:layout_width="match_parent"
                    android:layout_height="175dp">

                    <ImageView
                        android:id="@+id/coverImageId"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cover_image" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ProfilePicIdForOwner"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/empty_profile"
                        app:civ_border_color="@color/colorAquaDark"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/nameForOwner"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_below="@id/coverImageId"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/ProfilePicIdForOwner"
                        android:layout_toRightOf="@+id/ProfilePicIdForOwner"
                        android:gravity="center_vertical"
                        android:text="Name"
                        android:textSize="20dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logoutLayId1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layot4">

                    <View
                        android:id="@+id/viewId"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="10dp"
                        android:background="#7C7C7C">

                    </View>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:weightSum="2"
                        android:layout_below="@id/viewId"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:textColor="@color/colorWhite"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background"
                            android:onClick="goToYourRent"
                            android:text="Your Rent" />

                        <Button
                            android:textColor="@color/colorWhite"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:textAllCaps="false"
                            android:layout_weight="1"
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_background"
                            android:text="Your Ads" />
                    </LinearLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/logoutLayId1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:backgroundTint="#FDFDFD"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_home_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/ownerAreaid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="Mohammad pur"
                                        android:textSize="18dp" />

                                    <TextView
                                        android:id="@+id/ownerRoadNoId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="center_vertical"
                                        android:text="Nurjahan Road"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="#7C7C7C"></View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_phone_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/ownerPhoneId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text="@android:string/emptyPhoneNumber"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="#7C7C7C">

                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_email_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/ownerEmailId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@android:string/defaultVoiceMailAlphaTag"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="#7C7C7C">

                            </View>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_confirmation_number_black_24dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/ownerHouseId"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="House Name"
                                        android:textSize="18dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_marginBottom="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="90dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:background="#7C7C7C">

                            </View>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>